<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape >
            <corners android:radius="8dp"/>
            <padding android:left="2dp"
                android:top="2dp" android:right="2dp" android:bottom="2dp"/>
            <solid android:color="@color/action_color_button_pressed"/>
            <stroke android:width="1dp" android:color="@color/action_color_button_stroke"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape >
            <corners android:radius="8dp"/>
            <padding android:left="2dp"
                android:top="2dp" android:right="2dp" android:bottom="2dp"/>
            <solid android:color="@color/action_color_button_pressed"/>
            <stroke android:width="1dp" android:color="@color/action_color_button_stroke"/>
        </shape>
    </item>
    
    <item >
        <shape >
            <corners android:radius="8dp"/>
            <padding android:left="2dp"
                android:top="2dp" android:right="2dp" android:bottom="2dp"/>
            <solid android:color="@color/action_color_button"/>
            
        </shape>
    </item>

</selector>