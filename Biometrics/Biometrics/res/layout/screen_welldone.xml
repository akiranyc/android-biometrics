<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:background="@android:color/darker_gray"
        android:text="Biometrics Recognition"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:drawableLeft="@drawable/ic_app"
        android:paddingLeft="8dp" android:paddingRight="8dp"
        android:gravity="center"/>
    <TextView android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="6dp" android:paddingRight="6dp"
        android:paddingTop="8dp"
        android:gravity="center_horizontal"
        android:text="Your phone is ready for recognition using biometrics features."
        android:textSize="20sp"
        android:textColor="#00ffff"/>
    <Button android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="3dp" android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:background="@android:color/darker_gray"
        android:text="Done"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:gravity="center"
        android:id="@+id/button_done"/>

</LinearLayout>